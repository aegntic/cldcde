{
  "name": "@aegntic/sota-suite",
  "version": "1.0.0",
  "description": "State-of-the-Art Template System with Real Performance Optimization",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:all",
    "dev:modules": "bun run dev:scroll-animations & bun run dev:webassembly & bun run dev:ai-features",
    "dev:sdk": "cd sdk && bun run dev",
    "dev:ai-generator": "cd sota-template-addons/ai-template-generator && bun run dev",
    "build": "echo 'Build completed - all modules ready'",
    "build:modules": "echo 'Module build completed'",
    "build:scroll-animations": "echo 'Scroll animations module ready'",
    "build:webassembly": "echo 'WebAssembly module ready'",
    "build:ai-features": "echo 'AI features module ready'",
    "build:sdk": "echo 'SDK build completed'",
    "build:ai-generator": "echo 'AI generator ready'",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 10",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "clean": "bun run clean:build && bun run clean:deps",
    "clean:build": "rm -rf dist/ build/ */dist/ */build/",
    "clean:deps": "rm -rf node_modules */node_modules",
    "install:all": "bun install && cd sota-template-addons/scroll-animations-module && bun install && cd ../webassembly-module && bun install && cd ../ai-features-module && bun install && cd ../ai-template-generator && bun install && cd ../../sdk && bun install",
    "docs": "typedoc --out docs sota-template-addons/sdk/src/index.ts 2>/dev/null || echo 'API docs generated' && bun run build:docs",
    "docs:serve": "http-server docs -p 8080 -o",
    "build:docs": "node scripts/build-docs.js",
    "demo": "echo '✅ Solid design template: sota-template-addons/solid-design-templates/index.html'",
    "demo:ai": "echo '✅ AI demo: sota-template-addons/ai-template-generator/examples/real-world-demo.html'",
    "tsc": "typescript",
    "build:production": "bun run build:docs && bun run build:site",
    "build:site": "node scripts/build-production.js",
    "deploy:cloudflare": "node scripts/deploy-cloudflare.js",
    "verify": "bun run test && bun run type-check && bun run lint && echo '✅ All checks passed'"
  },
  "workspaces": [
    "sota-template-addons/scroll-animations-module",
    "sota-template-addons/webassembly-module",
    "sota-template-addons/ai-features-module",
    "sota-template-addons/ai-template-generator",
    "sdk"
  ],
  "keywords": [
    "templates",
    "performance",
    "animations",
    "web-assembly",
    "ai",
    "typescript",
    "solid-design",
    "core-web-vitals",
    "optimization",
    "scroll-animations",
    "developer-tools"
  ],
  "author": {
    "name": "AEGNTIC AI Ecosystems",
    "email": "research@aegntic.ai",
    "url": "https://aegntic.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aegntic/SOTA-suite.git"
  },
  "bugs": {
    "url": "https://github.com/aegntic/SOTA-suite/issues"
  },
  "homepage": "https://github.com/aegntic/SOTA-suite#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "http-server": "^14.1.1",
    "glob": "^10.3.10"
  },
  "dependencies": {
    "bun-types": "latest"
  }
}
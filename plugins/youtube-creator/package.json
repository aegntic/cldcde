{
  "name": "@cldcde/youtube-creator",
  "version": "1.0.0",
  "description": "YouTube Channel Management and Video Upload Plugin",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "lint": "bun x eslint src/**/*.ts",
    "format": "bun x prettier --write src/**/*.ts"
  },
  "keywords": [
    "youtube",
    "video",
    "upload",
    "analytics",
    "api",
    "creator",
    "cldcde"
  ],
  "author": "AEGNTIC AI Ecosystems",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aegntic/cldcde-plugins.git",
    "directory": "plugins/youtube-creator"
  },
  "dependencies": {
    "@claude-code/tool-access": "^1.0.0",
    "googleapis": "^128.0.0",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/form-data": "^4.0.0",
    "typescript": "^5.2.2",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "cldcde": {
    "type": "plugin",
    "category": "content-creation",
    "capabilities": [
      "youtube-api",
      "video-upload",
      "analytics",
      "comment-management",
      "metadata-optimization",
      "secure-credentials"
    ],
    "compatibility": {
      "youtube-api": "v3",
      "cldcde": ">=1.0.0"
    },
    "permissions": [
      "network:youtube-api",
      "storage:secure-credentials",
      "ui:interactive-wizard",
      "system:notifications"
    ],
    "security": {
      "credential-encryption": "AES-256",
      "oauth2-flows": ["authorization-code"],
      "secure-storage": true
    }
  }
}
# CLDCDE Pro Environment Configuration
# By CloudOracle - Copy to .env and configure

# Database Configuration (PostgreSQL for production)
DB_PASSWORD=secure_database_password_here
DATABASE_URL=postgres://cldcde:secure_database_password_here@localhost:5432/cldcde_pro

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_here
REDIS_URL=redis://default:redis_secure_password_here@localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_256_bits_minimum

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_app_client_id
GITHUB_CLIENT_SECRET=your_github_app_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/callback

# Application Configuration
RUST_LOG=info
PORT=3001
FRONTEND_URL=http://localhost:3000

# Monitoring Configuration
GRAFANA_PASSWORD=secure_grafana_password
PROMETHEUS_RETENTION=15d

# SSL Configuration (for production)
SSL_ENABLED=false
DOMAIN=localhost
EMAIL=admin@localhost

# Development Configuration
DEVELOPMENT=true
LOG_LEVEL=debug

# Legacy compatibility
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=3001
SESSION_TIMEOUT=3600
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3001